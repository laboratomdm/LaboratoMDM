<UserControl x:Class="LaboratoMDM.UI.Operator.Views.PolicyEditorControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
             xmlns:selectors="clr-namespace:LaboratoMDM.UI.Operator.Selectors"
             xmlns:viewmodels="clr-namespace:LaboratoMDM.UI.Operator.ViewModels"
             x:Name="RootControl">

    <UserControl.Resources>
        <!-- DataTemplates для разных типов элементов -->
        <DataTemplate x:Key="TextBoxTemplate">
            <StackPanel Margin="4">
                <TextBlock Text="{Binding Label}" FontWeight="Bold"/>
                <TextBox Text="{Binding Value, Mode=TwoWay}" />
            </StackPanel>
        </DataTemplate>

        <DataTemplate x:Key="DropdownTemplate">
            <StackPanel Margin="4">
                <TextBlock Text="{Binding Label}" FontWeight="Bold"/>
                <ComboBox ItemsSource="{Binding Options}" SelectedItem="{Binding Value, Mode=TwoWay}" />
            </StackPanel>
        </DataTemplate>

        <DataTemplate x:Key="CheckBoxTemplate">
            <CheckBox Content="{Binding Label}" IsChecked="{Binding Value, Mode=TwoWay}"/>
        </DataTemplate>

        <DataTemplate x:Key="DecimalTextBoxTemplate">
            <StackPanel Margin="4">
                <TextBlock Text="{Binding Label}" FontWeight="Bold"/>
                <xctk:DecimalUpDown Value="{Binding Value, Mode=TwoWay}"
                                    Increment="{Binding SpinStep}"
                                    Minimum="{Binding Minimum}"
                                    Maximum="{Binding Maximum}"
                                    FormatString="F0"
                                    Width="120"/>
            </StackPanel>
        </DataTemplate>

        <DataTemplate x:Key="LabelTemplate">
            <TextBlock Text="{Binding Label}" FontWeight="Normal"/>
        </DataTemplate>

        <DataTemplate x:Key="ListBoxTemplate">
            <StackPanel Margin="4">
                <TextBlock Text="{Binding Label}" FontWeight="Bold"/>
                <ListBox ItemsSource="{Binding Options}" Height="80"/>
            </StackPanel>
        </DataTemplate>

        <DataTemplate x:Key="MultiTextBoxTemplate">
            <StackPanel Margin="4">
                <TextBlock Text="{Binding Label}" FontWeight="Bold"/>
                <ItemsControl ItemsSource="{Binding MultiTextValues}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <TextBox Text="{Binding ., Mode=TwoWay}" Margin="0,2,0,2"/>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </StackPanel>
        </DataTemplate>

        <!-- TemplateSelector -->
        <selectors:ElementTemplateSelector x:Key="ElementTemplateSelector"
                                           TextBoxTemplate="{StaticResource TextBoxTemplate}"
                                           MultiTextBoxTemplate="{StaticResource MultiTextBoxTemplate}"
                                           DropdownTemplate="{StaticResource DropdownTemplate}"
                                           CheckBoxTemplate="{StaticResource CheckBoxTemplate}"
                                           DecimalTextBoxTemplate="{StaticResource DecimalTextBoxTemplate}"
                                           LabelTemplate="{StaticResource LabelTemplate}"
                                           ListBoxTemplate="{StaticResource ListBoxTemplate}"/>
    </UserControl.Resources>

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <ItemsControl ItemsSource="{Binding Elements}">
            <ItemsControl.ItemTemplate>
                <HierarchicalDataTemplate ItemsSource="{Binding Children}">
                    <ContentControl Content="{Binding}" ContentTemplateSelector="{StaticResource ElementTemplateSelector}"/>
                </HierarchicalDataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>
    </ScrollViewer>
</UserControl>
