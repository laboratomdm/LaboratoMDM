<UserControl x:Class="LaboratoMDM.UI.Operator.Views.PolicyEditorControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
             xmlns:selectors="clr-namespace:LaboratoMDM.UI.Operator.Selectors"
             x:Name="RootControl">

    <UserControl.Resources>
        <!-- DataTemplates -->
        <DataTemplate x:Key="TextBoxTemplate">
            <StackPanel Margin="4">
                <TextBlock Text="{Binding Label}" FontWeight="Bold"/>
                <TextBox Text="{Binding Value, Mode=TwoWay}" />
            </StackPanel>
        </DataTemplate>

        <DataTemplate x:Key="DropdownTemplate">
            <StackPanel Margin="4">
                <TextBlock Text="{Binding Label}" FontWeight="Bold"/>

                <ComboBox ItemsSource="{Binding Options}"
                  DisplayMemberPath="Value"
                  SelectedValuePath="Value"
                  SelectedValue="{Binding Value, Mode=TwoWay}" />
            </StackPanel>
        </DataTemplate>


        <DataTemplate x:Key="CheckBoxTemplate">
            <CheckBox Content="{Binding Label}"
                      IsChecked="{Binding Value, Mode=TwoWay}"/>
        </DataTemplate>

        <DataTemplate x:Key="DecimalTextBoxTemplate">
            <StackPanel Margin="4">
                <TextBlock Text="{Binding Label}" FontWeight="Bold"/>
                <xctk:DecimalUpDown Value="{Binding Value, Mode=TwoWay}"
                                    Increment="{Binding SpinStep}"
                                    Minimum="{Binding Minimum}"
                                    Maximum="{Binding Maximum}"
                                    FormatString="F0"
                                    Width="120"/>
            </StackPanel>
        </DataTemplate>

        <DataTemplate x:Key="LabelTemplate">
            <TextBlock Text="{Binding Label}" />
        </DataTemplate>

        <DataTemplate x:Key="ListBoxTemplate">
            <StackPanel Margin="4">

                <TextBlock Text="{Binding Label}"
                   FontWeight="Bold"
                   Margin="0,0,0,4"/>

                <ListBox ItemsSource="{Binding Options}"
                    MinHeight="80" MinWidth="120">

                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <DockPanel LastChildFill="True">

                                <Button Content="✕"
                                    DockPanel.Dock="Right"
                                    Width="22"
                                    Height="22"
                                    Margin="4,0,0,0"
                                    Command="{Binding DataContext.RemoveOptionCommand,
                                                RelativeSource={RelativeSource AncestorType=ListBox}}"
                                    CommandParameter="{Binding}" />

                                <TextBox Text="{Binding Value,
                                        Mode=TwoWay,
                                        UpdateSourceTrigger=PropertyChanged}"
                                        MinWidth="120" />
                            </DockPanel>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>


                <!-- добавить -->
                <Button Content="+ Добавить"
                Margin="0,6,0,0"
                HorizontalAlignment="Left"
                Command="{Binding AddOptionCommand}" />
            </StackPanel>
        </DataTemplate>


        <DataTemplate x:Key="MultiTextBoxTemplate">
            <StackPanel Margin="4">
                <TextBlock Text="{Binding Label}" FontWeight="Bold"/>
                <ItemsControl ItemsSource="{Binding MultiTextValues}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <TextBox Text="{Binding ., Mode=TwoWay}" Margin="0,2"/>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </StackPanel>
        </DataTemplate>

        <!-- TemplateSelector -->
        <selectors:ElementTemplateSelector x:Key="ElementTemplateSelector"
                                           TextBoxTemplate="{StaticResource TextBoxTemplate}"
                                           MultiTextBoxTemplate="{StaticResource MultiTextBoxTemplate}"
                                           DropdownTemplate="{StaticResource DropdownTemplate}"
                                           CheckBoxTemplate="{StaticResource CheckBoxTemplate}"
                                           DecimalTextBoxTemplate="{StaticResource DecimalTextBoxTemplate}"
                                           LabelTemplate="{StaticResource LabelTemplate}"
                                           ListBoxTemplate="{StaticResource ListBoxTemplate}"/>
    </UserControl.Resources>

    <!-- === Layout === -->
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- === Scrollable editor === -->
        <ScrollViewer Grid.Row="0"
                      VerticalScrollBarVisibility="Auto">
            <ItemsControl ItemsSource="{Binding Elements}">
                <ItemsControl.ItemTemplate>
                    <HierarchicalDataTemplate ItemsSource="{Binding Children}">
                        <ContentControl Content="{Binding}"
                                        ContentTemplateSelector="{StaticResource ElementTemplateSelector}"/>
                    </HierarchicalDataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>

        <!-- === Bottom buttons === -->
        <Border Grid.Row="1"
                Background="#FFF8F8F8"
                BorderThickness="1,0,0,0"
                BorderBrush="#FFD0D0D0"
                Padding="8">

            <StackPanel Orientation="Horizontal"
                        HorizontalAlignment="Right">

                <Button Content="Отключить"
                        Width="120"
                        Margin="0,0,8,0"
                        Command="{Binding DisableCommand}" />

                <Button Content="Применить"
                        Width="120"
                        Command="{Binding ApplyCommand}" />
            </StackPanel>
        </Border>
    </Grid>
</UserControl>
